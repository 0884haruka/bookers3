<%= form_with model: @book do |f| %>
<div class="form-group">
  <label class="book_title">Title</label>
  <div class"book_title"><%= f.text_field :title, class: "form-control" %></div>
</div>
<div class="form-group">
  <div class="book_opinion">Opinion</div>
  <div class="book_opinion"> <%= f.text_area :body, class: "form-control" %></div>
</div>
<div class="form-group">
  <%= f.submit 'Create Book' ,class: 'btn btn-success'%>
</div>
  <% end %>