<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
    
      <%= form_with model: @list do |f| %>
      <div class="form-group">
        <label class="user_name">Name</label> 
        <input class="form-control name"> <%= f.text_field :title %></input>
      </div>
      <div class="form-group">
        <label class="Image">Image</label> 
      </div>
      <div class="form-group">
        <label class="user_introduction">Introduction</label>
        <input class="form-control introduction"><%= f.text_area :body %></input>
      </div>
      <div class="form-group">
      <%= f.submit 'Update User' %>
      </div>
      <% end %>
    </div>
  </div>
</div>