<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
    
      <%= form_with model: @list do |f| %>
      <div class="form-group">
        <label class="user_name">Name</label> 
        <div class="user_name"> <%= f.text_field :title, class: "form-control" %></div>
      </div>
      <div class="form-group">
        <label class="Image">Image</label>
         <div class="Image"><%= f.file_field :image, accept: "image/*" %></div>
      </div>
      <div class="form-group">
        <label class="user_introduction">Introduction</label>
        <div class="user_introduction"><%= f.text_area :body, class: "form-control" %></div>
      </div>
      <div class="form-group">
      <%= f.submit 'Update User',class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>